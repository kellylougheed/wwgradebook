<br/>
<p>
  <%= link_to student_path(@student) do %>
    <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to <%= @student.first_name %> <%= @student.last_name %>
  <% end %>
</p>

<h1><%= @entry.assignment_name %></h1>

<h2>Standards</h2>

<% if @entry.assignment_obj.has_standard1? %>
  <p>1. <%= @course.standard1 %>: <b><%= @entry.standard1_grade %></b></p>
<% end %>

<% if @entry.assignment_obj.has_standard2? %>
  <p>2. <%= @course.standard2 %>: <b><%= @entry.standard2_grade %></b></p>
<% end %>

