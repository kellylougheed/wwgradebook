<h1>My Courses</h1>

<% if @courses.empty? %>

<p>No courses to display.</p>

<% else %>

<% @courses.order('created_at DESC').each do |course| %>

  <h2><%= link_to course_path(course) do %><%= course.name %><% end %></h2>
  <br/>
  
<% end %>

<% end %>

<br/>
<%= link_to 'New Course', new_course_path, class: 'btn btn-primary' %>
