<h2>Comments</h2>

<% if @entry.comment? %>
  <p><%= @entry.comment %></p>
<% else %>
  <p>Click "Edit Grade Entry" to add a comment.</p>
<% end %>

<%= link_to edit_student_entry_path(@student, @entry) do %>
  <button class="btn btn-primary">Edit Grade Entry</button>
<% end %>
<%= link_to student_entry_path(@student, @entry), method: :delete, data: {confirm: 'Are you sure you want to delete this grade entry?'} do %>
  <button class="btn btn-danger">Delete Grade Entry</button>
<% end %>
